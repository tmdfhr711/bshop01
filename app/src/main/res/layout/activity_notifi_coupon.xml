<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="example.android.laioh.bshop.activity.NotifiCouponActivity"
    android:id="@+id/coupon_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/coupon_title"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="엔젤리너스에서 쿠폰이 도착했어요"
            android:padding="10dp"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:layout_marginTop="32dp"
            android:id="@+id/coupon_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이벤트명 : "/>

        <TextView
            android:layout_marginTop="32dp"
            android:id="@+id/coupon_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이벤트내용 : "/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/coupon_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"/>
            <Button
                android:id="@+id/coupon_submit"
                android:layout_marginLeft="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쿠폰받기"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
